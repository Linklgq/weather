<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/weather_margin"
    android:padding="@dimen/weather_padding"
    android:background="@color/translucent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/weather_title"
        android:text="@string/weather_forecast"></TextView>

    <com.example.lenovo.weather.customview.MyListView
        android:id="@+id/lv_forecast_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>